{
    "name": "betasyntax/betasyntax",
    "description": "Beta Syntax Framework.",
    "keywords": ["framework", "betasyntax"],
    "license": "MIT",
    "type": "project",
    "version": "0.0.2",
    "require": {
        "php": ">=5.5.9",
        "ext-mbstring":"*",
        "ext-openssl":"*",
        "betasyntax/framework":"dev-master"
    },
    "require-dev": {
        "phpunit/phpunit":"5.4.*",
        "phpunit/php-invoker": "*",
        "robmorgan/phinx":"v0.6.4",
        "maximebf/debugbar": "1.*",
        "mockery/mockery": "~0.9"
    },
    "autoload": {
        "psr-4": {
          "App\\":"app/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "mv -f ./vendor/betasyntax/betasyntax/* ./",
            "rm -Rf ./vendor/betasyntax/betasyntax",
            "composer install"
        ]
    }
}
